#!/usr/bin/env bash
# ^^^ for syntax checking in the editor only

: "${MMDAPP:?â›” ERROR: MMDAPP is not set}"

while true ; do
	case "$1" in
		--verbose)
			local MDSC_DETAIL=true ; shift
			continue
		;;
		--no-cache)
			local MDSC_NO_CACHE=$1 ; shift
			continue
		;;
		--no-index)
			local MDSC_NO_INDEX=$1 ; shift
			continue
		;;
		*)
			break
		;;
	esac
done
