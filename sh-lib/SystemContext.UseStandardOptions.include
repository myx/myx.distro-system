#!/usr/bin/env bash
# ^^^ for syntax checking in the editor only
while true ; do
	case "$1" in
		--verbose)
			local MDSC_DETAIL=true ; shift
			continue
		;;
		--no-cache)
			local MDSC_NO_CACHE=$1 ; shift
			continue
		;;
		--no-index)
			local MDSC_NO_INDEX=$1 ; shift
			continue
		;;
	esac
	return 0
done
