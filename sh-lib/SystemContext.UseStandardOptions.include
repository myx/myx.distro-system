#!/usr/bin/env bash
# ^^^ for syntax checking in the editor only
while [ $# -gt 0 ] ; do
	case "$1" in
		--verbose)
			local MDSC_DETAIL=true ; export MDSC_DETAIL ; shift
			continue
		;;
		--no-cache)
			local MDSC_NO_CACHE=$1 ; export MDSC_NO_CACHE ; shift
			continue
		;;
		--no-index)
			local MDSC_NO_INDEX=$1 ; export MDSC_NO_INDEX ; shift
			continue
		;;
	esac
	return 0
done
